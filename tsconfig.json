{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "preserveSymlinks": false,
    "experimentalDecorators": true
  },
  "baseUrl": ".",
  "references": [
    {
      "path": "injected-scripts/tsconfig.json"
    },
    {
      "path": "replay/tsconfig.json"
    },
    {
      "path": "replay/tsconfig.backend.json"
    }
  ],
  "include": ["**/*.ts", "**/*.js", "**/*.json"],
  "exclude": [
    "**/tsconfig*.json",
    "node_modules",
    "**/dist",
    "**/build",
    "build",
    "build-dist",
    "replay",
    "website",
    "injected-scripts"
  ]
}
