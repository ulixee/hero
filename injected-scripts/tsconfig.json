{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "DOM.Iterable", "ES2018"],
    "declaration": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "../build/injected-scripts",
    "composite": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "removeComments": true
  },
  "include": ["./interfaces/*.ts", "./scripts/*.ts", "./package.json"],
  "exclude": ["node_modules"]
}
