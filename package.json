{
  "name": "@secret-agent/monorepo",
  "version": "1.0.0-alpha.2",
  "private": true,
  "description": "The Web Browser Built for Scraping",
  "scripts": {
    "start:website": "yarn workspace @secret-agent/website start",
    "bump-version": "lerna version patch --no-git-tag-version",
    "build": "yarn tsc && yarn workspace @secret-agent/replay build && cd build && yarn",
    "build:copy": "copyfiles 'shared/testing/html/**' 'yarn.lock' 'mitm/socket/**' 'mitm/socket/.checksum' 'mitm/test/certs/**' build && cp package.build.json build/package.json",
    "build:dist": "rm -rf build-dist && tsc -b tsconfig.dist.json && copyfiles 'mitm/socket/**' 'mitm/socket/.checksum' build-dist && node dist-prepare.js && cp package.dist.json build-dist/package.json",
    "build:docker": "yarn build:dist && docker build -t secret-agent .",
    "tsc": "tsc -b tsconfig.json && yarn build:copy",
    "tsc-modules": "ln -sf node_modules build/node_modules",
    "watch": "tsc -b -w tsconfig.json",
    "watch:dist": "tsc -b -w tsconfig.dist.json",
    "clean": "tsc -b --clean  tsconfig.json && yarn workspace @secret-agent/replay clean",
    "test": "yarn tsc && cd build && yarn test"
  },
  "repository": "git@github.com:ulixee/secret-agent.git",
  "author": "Data Liberation Foundation",
  "contributors": [
    "Caleb Clark",
    "Blake Byrnes"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ulixee/secret-agent/issues"
  },
  "homepage": "https://secretagent.dev",
  "engines": {
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.7.11",
    "copyfiles": "^2.3.0",
    "husky": "^4.2.5",
    "lerna": "^3.4.3",
    "lint-staged": "^10.2.11",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.8.0",
    "source-map-support": "^0.5.16",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~3.8.3"
  },
  "workspaces": {
    "packages": [
      "client",
      "core",
      "core-interfaces",
      "emulators",
      "emulator-plugins/*",
      "full-client",
      "humanoids",
      "humanoid-plugins/*",
      "injected-scripts",
      "mitm",
      "core-server",
      "remote-client",
      "remote-interfaces",
      "replay",
      "replay-api",
      "shared/*",
      "website"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "tslint --format verbose",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "resolutions": {
    "remark-slug": "git://github.com/ulixee/remark-slug.git"
  }
}
